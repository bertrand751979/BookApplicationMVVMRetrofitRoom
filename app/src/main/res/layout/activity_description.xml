<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.ScrollingActivity"
    tools:showIn="@layout/activity_scroll"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/desc_photo_book"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/ic_error"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/desc_book_writer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auteur"
                android:layout_marginTop="185dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/purple_200"/>

            <TextView
                android:id="@+id/desc_book_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titre du Livre"
                android:textStyle="italic"
                android:layout_marginTop="185dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/purple_200"/>

            <TextView
                android:id="@+id/desc_published"
                android:layout_marginTop="185dp"
                android:layout_marginLeft="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="published"/>


        </LinearLayout>
        <TextView
            android:id="@+id/desc_book_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="3dp"
            android:text="jkjhkjkhkhkjhkhkdhkqhkjhsjkjhdkjhhajkhjkh..."/>
</RelativeLayout>
</androidx.core.widget.NestedScrollView>